{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "strict": true,
        "noEmit": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "types": ["vite/client", "node", "./src/types.d.ts"],
        "jsxImportSource": "solid-js",
        "jsx": "preserve",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
